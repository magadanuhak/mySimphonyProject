{% extends 'base.html.twig' %}

{% block title %}Login Page{% endblock %}

{% block body %}


<div class="container ">
    <h1>Login Page</h1>
    <hr>
    <section class="login card m-3 d-flex col-6 justify-content-center ">
        <h3 class="card-header text-center">
            Login
        </h3>
        <div class="card-body">
            {% if error %}
                <div class="alert-danger alert">
                    Please input correct login or password
                </div>
            {% endif %}
            <form action="{{ path('login') }}" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" name="_username" class="form-control" value="{{ last_username }}" id="username" placeholder="Enter username" aria-describedby="usernameHelp">
                    <small id="usernameHelp" class="form-text text-muted">Please enter username.</small>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" class="form-control" name="_password" aria-describedby="passwordHelp" >
                    <small id="passwordHelp" class="form-text text-muted">Please enter your password.</small>
                </div>

                <button type="submit" class="btn btn-info">Login</button>
            </form>
        </div>
    </section>

</div>
{% endblock %}
